<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="toa_apc.apc_listener.class">Toa\Bundle\ApcBundle\EventListener\ApcListener</parameter>
    </parameters>

    <services>
        <service id="toa_apc.apc_listener" class="%toa_apc.apc_listener.class%">
            <argument>%toa_apc.cache_dir%</argument>
            <argument>%toa_apc.prefix%</argument>
            <tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>
